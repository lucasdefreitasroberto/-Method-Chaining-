unit classes;

interface

uses
  interfaces, System.SysUtils;

type
  TPerson = class(TInterfacedObject, IPessoa)
  private
    FNome: string;
    FIdade: Integer;
    FEndereco: string;
  public
    function Nome(Value: string): Ipessoa;
    function Idade(Value: Integer): Ipessoa;
    function Endereco(Value: string): Ipessoa;
    function Documento: string;
  end;

implementation

{ TPerson }

function TPerson.Documento: string;
begin
  Result := Format('Name: %s, Age: %d, Address: %s', [FNome, FIdade, FEndereco]);
end;

function TPerson.Endereco(Value: string): Ipessoa;
begin
  FEndereco := Value;
  Result := Self; // Retorna a própria instância para encadeamento de métodos
end;

function TPerson.Idade(Value: Integer): Ipessoa;
begin
  FIdade := Value;
  Result := Self;
end;

function TPerson.Nome(Value: string): Ipessoa;
begin
  FNome := Value;
  Result := Self;
end;

end.

